<%- include("partials/header.ejs") %>

    <div class="p-4 p-md-5 mb-4 rounded text-body-emphasis bg-body-secondary ">
        <div class="col-lg-12 px-0">
            <h1 class="display-4 fw-bold heading">Blog Post</h1>
            <p class="lead my-3 heading">Multiple lines of text, informing new readers quickly and
                efficiently about what’s most interesting in this post’s contents.</p>
            <p class="post-link lead mb-0"><a href="/edit" class="text-body-emphasis fw-bold">Create new post...</a></p>
        </div>
    </div>
    
    <!-- START THE FEATURETTES -->
    <% if (locals.blog) {%>
        <% for( let index=0; index < blog.length; index++ ) { %>
            <div class="row featurette">
                <div class="col-md-7 <% if (index%2!=0) {%>order-md-2<% } %>">
                    <h2 class="title featurette-heading fw-normal lh-1">
                        <a class=" stretched-link" href="/post?index=<%=index%>">
                            <%=blog[index]["title"]%>
                        </a>
                    </h2>
                    <p class="lead subtitle">
                        <%=blog[index]["body"].substring(blog[index]["body"].indexOf(">")+1,blog[index]["body"].indexOf("<",3))%>

                    </p>


                </div>
                <div class="col-md-5 <% if (index%2!=0) {%>order-md-1<% } %> ">
                    <% if (index%2!=0) {%><a href="/delete/<%=index%>" type="button" class="delete-btn btn btn-outline-danger">✖️</a>
                        <% } %>
                            <img src="<%=blog[index]["img"]%>"class="rounded bd-placeholder-img-sm featurette-image
                            img-fluid mx-auto" width="200"
                            height="200" role="img" aria-label="Placeholder: 200x200" preserveAspectRatio="xMidYMid
                            slice"
                            focusable="false" />
                            <% if (index%2===0) {%><a href="/delete/<%=index%>" type="button" class="delete-btn btn btn-outline-danger">✖️</a>
                                <%}%>
                </div>

            </div>
            <hr class="featurette-divider">
            <% } %>
                <% } %>
                    <!-- /END THE FEATURETTES -->

                    <%- include("partials/footer.ejs") %>